{
    "compileOnSave": true,
    "compilerOptions": {
        "composite": true,
        "outDir": "./lib",
        "inlineSourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "ES2018",
        "lib": ["ES2018"],
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "declarationMap": true
    },
    "exclude": ["node_modules", "dist", "tests"]
}
